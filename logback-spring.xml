<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_DIR" value="./logs/" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss}\t%-5p\t%m%n</pattern>
        </encoder>
    </appender>

    <!-- Appender dinamico per creare file di log per ogni view diversa -->
    <appender name="FILE_DYNAMIC" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>
            ${LOG_DIR}/app_logs.log
        </file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} \t%-5p\t%m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_DIR}/app_logs_%d{yyyy_MM_dd}.%i.log.gz
            </fileNamePattern>
            <maxFileSize>200MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <!--<totalSizeCap>4GB</totalSizeCap>-->
        </rollingPolicy>
    </appender>

    <!-- LOG everything at debug level -->
    <root level="info">
        <appender-ref ref="FILE_DYNAMIC" />
        <appender-ref ref="console" />
    </root>

    <!-- Logger per la tua applicazione -->
    <logger name="com.panda.security" level="debug" additivity="false">
        <appender-ref ref="FILE_DYNAMIC" />
        <appender-ref ref="console" />
    </logger>

    <!-- Logger per Spring Framework -->
    <logger name="org.springframework" level="info" additivity="false">
        <appender-ref ref="FILE_DYNAMIC" />
        <appender-ref ref="console" />
    </logger>
</configuration>